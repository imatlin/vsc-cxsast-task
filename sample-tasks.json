{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "label": "CxSAST",
    "options": {},
    "tasks": [
        {
            "label": "Run CxSAST Analysis",
            "type": "shell",
            "group": "test",
            "windows": {
                "command": "C:\\cxsast-task\\CxSASTRunScan.ps1"
            },
            "linux": {
                "command": "~/bin/cxsast-task/CxSASTRunScan.ps1"
            },
            "osx": {
                "command": "~/bin/cxsast-task/CxSASTRunScan.ps1"
            },
            "args": [
                 "-CxServer",          
                "localhost",
                "-projectName",              
                "CxServer\\SP\\ACME_Corp\\AppSec\\${workspaceFolderBasename}",              
                "-CxToken",
                "${env:CX_TOKEN}",
                "-sourceLocation",
                "${workspaceFolder}",
                "-preset",
                "OWASP TOP 10 - 2017",
                "-isIncremental",
                "${input:isIncremental}",
                "-isPrivate",
                "${input:isPrivate}",
// Optional values, uncomment as needed:
                "-Comment",
                "Scanned from VSCode",
                //"â€“LocationPathExclude",
                //"<exclude folder list>",
                //"-LocationFilesExclude",
                //"<exclude file list>" 
            ],
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": {
                "owner": "external",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*);(\\d+);(warning|error|info);(.*);(.*)",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4,
                    "code": 5
                }
            }            
        },
        {
            "label": "Display CxSAST Results",
            "type": "shell",
            "group": "test",
            "windows": {
                "command": "C:\\cxsast-task\\CxSASTShowResults.ps1"
            },
            "linux": {
                "command": "~/bin/cxsast-task/CxSASTShowResults.ps1"
            },
            "osx": {
                "command": "~/bin/cxsast-task/CxSASTShowResults.ps1"
            },
            "args": [
                "${workspaceFolder}/cx_results.xml"
            ],
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": {
                "owner": "external",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*);(\\d+);(warning|error|info);(.*);(.*)",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4,
                    "code": 5
                }
            }
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "isIncremental",
            "description": "Run Incremental Scan?",
            "options": ["Yes", "No"],
            "default": "Yes"
        },
        {
            "type": "pickString",
            "id": "isPrivate",
            "description": "Make Scan Private?",
            "options": ["Yes", "No"],
            "default": "No"
        }
    ]
}