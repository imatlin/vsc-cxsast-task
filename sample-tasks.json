    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Full CxSAST Analysis",
            "type": "shell",
            "group": "test",
            "windows": {
                "command": "D:\\Utilities\\CxConsole\\runCxConsole.cmd"
            },
            "linux": {
                "command": "~/CxConsole/runCxConsole.sh"
            },
            "args": [
                "scan",
                "-v",
                "-CxServer",
// TODO: replace with the URL of the Cx server                
                "localhost",
                "-projectName",
// TODO: replace with the fully qualified project name                
                "CxServer\\SP\\ACME_Corp\\AppSec\\${workspaceFolderBasename}",
// TODO: replace XXX with the actual token, or use username/password instead                
                "-CxToken",
                "baddeb2a9854268e2ef17c13a7e5de46",
                "-LocationType",
                "folder",
                "-LocationPath",
                "${workspaceFolder}",
                "-Preset",
                "OWASP TOP 10 - 2017",
// Optional values, uncomment as needed:                
                "-Comment",
                "Scanned from VSCode",
                //"-Private",
                //"–LocationPathExclude",
                //"<exclude folder list>",
                //"-LocationFilesExclude",
                //"<exclude file list>" 
            ],
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Run Incremental CxSAST Analysis",
            "type": "shell",
            "group": "test",
            "windows": {
                "command": "D:\\Utilities\\CxConsole\\runCxConsole.cmd"
            },
            "linux": {
                "command": "~/CxConsole/runCxConsole.sh"
            },
            "args": [
                "scan",
                "-v",
                "-CxServer",
// TODO: replace with the URL of the Cx server                
                "localhost",
                "-projectName",
// TODO: replace with the fully qualified project name                
                "CxServer\\SP\\ACME_Corp\\AppSec\\${workspaceFolderBasename}",
// TODO: replace XXX with the actual token, or use username/password instead                
                "-CxToken",
                "baddeb2a9854268e2ef17c13a7e5de46",
                "-LocationType",
                "folder",
                "-LocationPath",
                "${workspaceFolder}",
                "-Preset",
                "OWASP TOP 10 - 2017",
// Optional values, uncomment as needed:                
                "-Comment",
                "Scanned from VSCode",
                "-Incremental",
                //"-Private",
                //"–LocationPathExclude",
                //"<exclude folder list>",
                //"-LocationFilesExclude",
                //"<exclude file list>" 
            ],
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Display CxSAST Results",
            "type": "shell",
            "group": "test",
            "windows": {
                "command": "D:\\Source\\CxVSCode\\display_results.bat"
            },
            "linux": {
                "command": ""
            },
            "args": [
                "fossa-cli.xml"
            ],
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": {
                "owner": "external",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*);(\\d+);(warning|error|info);(.*);(.*)",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4,
                    "code": 5
                }
            }
        }
    ]
}